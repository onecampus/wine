<h2 style="text-align: center;">重新发送激活邮件</h2>
<div class="form-box">
  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, class: 'input-group') do |f| %>
    <%= devise_error_messages! %>
    <div class="input-row">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="actions">
      <%= f.submit "重新发送激活邮件", class: 'btn btn-red btn-block' %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
