<% content_for :customer_title do %>
  登陆
<% end %>

<div class="form-box">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'input-group') do |f| %>
    <div class="input-row">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="input-row">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>
    <%= f.submit '登陆', class: 'btn btn-red btn-block' %>

  <% end %>
</div>
<%= render "devise/shared/links" %>

