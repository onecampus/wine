<%= form_for(@group, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation" class="form-group">
      <div class="col-sm-2"></div>
      <div class="col-sm-9">
        <h2>保存时发生了<%= pluralize(@group.errors.count, "error") %></h2>
        <ul>
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :product_id, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.product_id' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.select(:product_id, options_for_select(@products.collect{|p| [p.name, p.id]}, @group.product_id)) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_time, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.start_time' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.datetime_select :start_time, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_time, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.end_time' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.datetime_select :end_time, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :limit_people_count, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.limit_people_count' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.number_field :limit_people_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :limit_product_count, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.limit_product_count' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.number_field :limit_product_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :limit_per_person, :class => "col-sm-2 control-label" do %>
    <%=t 'activerecord.attributes.group.limit_per_person' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.number_field :limit_per_person, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.description' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.price' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.text_field :price, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :saveup, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.saveup' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.text_field :saveup, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :discount, :class => "col-sm-2 control-label" do %>
      <%=t 'activerecord.attributes.group.discount' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.text_field :discount, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_commission, :class => "col-sm-2 control-label" do %>
    <%=t 'activerecord.attributes.group.is_commission' %> <span class="symbol required"></span>
    <% end %>
    <div class="col-sm-9">
      <%= f.select(:is_commission, options_for_select([['参与提成', 1], ['不参与提成', 0]], @group.is_commission)) %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="submit"></label>
    <div class="col-sm-9">
      <%= f.submit("提交", class: "btn btn-yellow btn-block") %>
    </div>
  </div>
<% end %>
