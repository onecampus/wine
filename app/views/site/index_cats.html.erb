<% content_for :customer_title do %>
    商城分类
<% end %>

<style type="text/css">
    .cats {
        margin-bottom: 100px;
    }

    .cats img {
        width: 100%;
        height: 150px;
    }

    .cat-top {
        width: 100%;
        height: 100px;
        background-image: url('/zhonglian/img/cat/bg-top.jpg');
        background-repeat: no-repeat;
        background-size: 100% 100px;
        background-position: center;
        display: block;
    }

    .cat-top .logo {
        width: 50px;
        height: 50px;
        padding: 25px 0 25px 0;
        text-align: center;
        margin: 0 auto 0 auto;
        display: block;
    }

    .cat-even {
        width: 100%;
        height: 150px;
        margin: 0;
        padding: 0;
        clear: both;
    }

    .cat-even .percent-35 {
        height: 150px;
        background-image: url('/zhonglian/img/cat/even-cat.jpg');
        background-repeat: no-repeat;
        background-size: 100% 150px;
        background-position: center;
        display: block;
    }

    .cat-odd {
        width: 100%;
        height: 150px;
        margin: 0;
        padding: 0;
        clear: both;
    }

    .cat-odd .percent-35 {
        height: 150px;
        background-image: url('/zhonglian/img/cat/odd-cat.jpg');
        background-repeat: no-repeat;
        background-size: 100% 150px;
        background-position: center;
        display: block;
    }
</style>
<div class="cat-top">
  <img class="logo" src="/zhonglian/img/cat/top-logo.png" alt="logo"/>
</div>

<hr/>

<div class="cats">
  <% @cats.each_with_index do |c, index| %>
      <% if index.even? %>
          <div class="cat-even">
            <div class="percent-65"><%= image_tag(c.img_url(:thumb)) if c.img? %></div>
            <div class="percent-35"><%= c.name %></div>
          </div>
          <hr/>
      <% elsif index.odd? %>
          <div class="cat-odd">
            <div class="percent-35"><%= c.name %></div>
            <div class="percent-65"><img src=""/></div>
          </div>
          <hr/>
      <% end %>
  <% end %>
</div>

<%= render "site/shared/bottombar" %>
