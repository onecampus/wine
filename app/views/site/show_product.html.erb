<% content_for :customer_title do %>
    商城
<% end %>
<style type="text/css">
    body {
        overflow: scroll;
    }

    .top-img {
        width: 100%;
        height: 200px;
    }

    .top-img img {
        width: 100%;
        height: 100%;
    }

    .p-charge {
        height: 65px;
        padding: 0 20px;
    }

    .p-charge p {
        margin: 3px;
    }

    .p-charge .price {
        color: #aa0c40;
        font-size: 24px;
    }

    .p-ampunt {
        height: 30px;
        padding: 0 20px;
        clear: both;
    }

    .p-ampunt div {
        float: left;
    }

    .ampunt-action {
        border: 1px solid gray;
        border-radius: 3px;
    }

    .p-ampunt div button, p {
        float: left;
    }

    .p-ampunt div p {
        margin: 0;
        padding: 0 15px;
        background-color: #ffffff;
    }

    .p-ampunt div button {
        border: none;
    }

    .p-purchase {
        height: 65px;
        padding: 0 10px;
        clear: both;
    }

    .p-purchase button {
        float: left;
        width: 30%;
        height: 35px;
        font-size: 14px;
    }

    .p-comments {
        padding: 0 20px;
        height: 45px;
        clear: both;
    }

    .p-comments p {
        width: 100%;
    }

    .p-comments a {
        color: black;
    }

    .p-comments .comment-count {
        background-color: #aa0c40;
        border-radius: 3px;
        width: 15px;
        text-align: center;
    }

    .arrow {
        float: right;
        font-size: 20px;
    }

    .p-intro {
        padding: 0 20px;
        height: auto;
        clear: both;
        min-height: 150px;
    }
</style>
<div class="main">
  <div class="top-img"><img src="<%= @product.img_url %>"/></div>
  <hr/>
  <div class="p-charge">
    <p><%= @product.name %></p>

    <p>
      <span class="price">¥ <%= @product.price %></span>
      <span class="freight">&nbsp;&nbsp;&nbsp;&nbsp;运费: 10</span>
    </p>
  </div>
  <hr/>
  <div class="p-ampunt">
    <div>数量:&nbsp;&nbsp;</div>
    <div class="ampunt-action">
      <button class="action-de" type="button">-</button>
      <p>1</p>
      <button class="action-plus" type="button">+</button>
    </div>
  </div>
  <hr/>
  <div class="p-purchase">
    <button class="btn" type="button">加入购物车</button>
    <button class="btn btn-red" type="button">立即购买</button>
  </div>
  <hr/>
  <div class="p-comments">
    <a href="/customer/products/<%= @product.id %>/comments">
      <p>商品评论&nbsp;&nbsp;<span class="comment-count">&nbsp;&nbsp;&nbsp;&nbsp;<%= @product.comment_threads.size %>&nbsp;&nbsp;&nbsp;&nbsp;</span><span class="arrow">&gt;</span>
      </p>
    </a>
  </div>
  <hr/>
  <div class="p-intro">

  </div>
</div>
<%= render "site/shared/bottombar" %>
