<% content_for :customer_title do %>
个人提现列表
<% end %>
<style>

  .withdraws{
    width: 100%;
    background: #fff;
    text-align: left;
  }
  table {
    margin-left: 2.5%;
    width: 95%;
    border:1px;
  }
  tr {
    border-bottom: 1px solid #eee;
  }
  th {
    padding: 10px 0 0 10px;
  }
  td {
    padding: 10px 10px;
  }

  .btn {
    padding: 5px 0;
    font-size: 24px;
  }

  .withdraw-now {
    width: 80%;
    margin: 20px 0 20px 10%;
    float: left;
  }
  .space-place {
    float: left;
    width: 100%;
    height: 80px;
  }
</style>
<div class="withdraws">
  <table>
    <tr>
      <th>类型</th>
      <th>金额</th>
      <th>时间</th>
    </tr>
    <% @withdraws.each do |w| %>
    <tr>
      <td><%= w.draw_type %></td>
      <td><%= w.draw_money %></td>
      <td><%= w.created_at.strftime("%Y-%m-%d") %></td>
    </tr>
    <% end %>
  </table>
  <button class="withdraw-now btn btn-red" type="button">我要提现</button>
</div>
<div class="space-place">
</div>
<%= render "site/shared/bottombar" %>
<script>
  $(document).ready(function(){
    $(".withdraw-now").click(function(){
      window.location.href = '/customer/withdraws/new';
    });
  });
</script>
