<% content_for :customer_title do %>
    <%= @cat.name %>商品列表
<% end %>
<style>
    body {
        overflow-x: hidden;
    }

    .cat-top {
        padding: 0;
        margin-top: -10px;
    }

    .cat-even {
        width: 100%;
        height: 150px;
        margin: 0;
        padding: 0;
        clear: both;
    }

    .cat-even .percent-35 {
        height: 170px;
        margin-top: -10px;
        background-image: url('/zhonglian/img/cat/even-cat.jpg');
        background-repeat: no-repeat;
        background-size: 100% 170px;
        background-position: center;
        display: block;
    }

    .percent-65 {
        height: 170px;
        margin-top: -10px;
    }

    .percent-65 img {
        height: 170px;
        width: 100%;
    }

    .cat-even-jiantou {
        width: 25px;
        height: 25px;
        background-image: url('/zhonglian/img/cat/jiantou.png');
        background-repeat: no-repeat;
        background-size: 25px 25px;
        float: right;
        margin-right: 20px;
        margin-top: -10px;
    }

    .cat-products {
        padding: 0;
    }

    .cat-products .product {
        width: 44%;
        height: 225px;
        margin-left: 16px;
        margin-bottom: 50px;
        background-color: #ffffff;
        float: left;
    }

    .product-name {
        margin-left: 5px;
    }

    .product-price {
        float: right;
        margin-right: 5px;
    }

    .cat-products .product img {
        width: 100%;
        height: 200px;
    }

    .cat-list {
        text-align: center;
        list-style: none;
        margin-left: -25px;
        margin-top: 50px;
        text-align: left;
        line-height: 5px;
    }

    .hr-style1 {
        width: 85%;
        color: #828372;
        height: 1px;
        border: 0;
        border-top: 1px solid;
    }

    .text1 {
        color: #777772;
        font-weight: bold;
    }

    .text2 {
        color: #7b7972;
        font-size: 12px;
    }

    .hr-style {
        margin-top: 30px;
    }
</style>
<div class="cat-top">
  <div class="cat-even">
    <div class="percent-65"><img src="<%= @cat.img %>" alt="<%= @cat.name %>"></div>
    <div class="percent-35">
      <ul class="cat-list">
        <li>
          <span class="text1"><%= @cat.name %></span>

          <div class="cat-even-jiantou"></div>
        </li>
        <hr class="hr-style1">
        <li>
          <p class="text2">zhongleiyizhong</p>
        </li>
        <hr class="hr-style1">
      </ul>
    </div>
  </div>
</div>
<hr class="hr-style">
<div class="cat-products">
  <% @cat_products.each_with_index do |p, index| %>
      <a href="/customer/products/<%= p.id %>/show">
        <div class="product">
          <img src="<%= p.img %>">
          <span class="product-name text2"><%= p.name %></span><span class="product-price text1">￥<%= p.price %></span>
        </div>
      </a>
  <% end %>
</div>
<%= render "site/shared/bottombar" %>
