<link rel="stylesheet" type="text/css" href="/zhonglian/css/slide.css">
<style type="text/css">
  body {
    background-color: #fff;
    width: 100%;
  }
  /* 首页搜索 */
  .search-box {
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 10px;
  }
  .search-box > img {
    width: 40px;
    height: 40px;
    float: left;
    padding: 10px;
  }
  .search-box .query {
    margin-left: 80px;
  }
  .search-box .q {
    border: 1px solid #e5e5e5;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
    border-radius: 5px;
    height: 20px;
    margin-top: 13px;
    width: 85%;
    padding: 6px 12px;
  }
  /* 幻灯片 */
  .stitle {
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0.6);
    color: white;
    font-size: 14px;
    margin-top: -30px;
    position: absolute;
    padding: 5px 0;
    width: 100%;
    z-index: 99999;
  }

  /* 首页导航 */
  .top-bar {
    width: 100%;
    height: 100px;
    margin: 5px 0 0 0;
    clear: both;
  }
  .secondt {
    margin-bottom: 60px;
    clear: both;
  }
  .top-bar .top-bar-item {
    width: 20%;
    height: 60px;
    float: left;
  }

  .top-bar .top-bar-item img {
    width: 40px;
    height: 40px;
  }

  .top-bar .top-bar-item p {
    text-align: center;
    line-height: 16px;
    font-size: 12px;
  }

  /* 首页商品和活动列表 */
  .mproductshow {
    display: block;
    margin: 5px auto;
    width: 100%;
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 10px;
    padding-top: 10px;
  }
  .left {
    float: left;
    width: 55%;
    border-right: 1px solid #e5e5e5;
    height: 130px;
    margin: 0 auto;
    text-align: center;
  }
  .left img {
    width: 92%;
    display: inline-block;
    height: 130px;
    vertical-align: middle;
  }
  .right {
    margin-left: 55%;
  }
  .right img {
    width: 89%;
    margin: 0 auto;
    height: 62px;
    vertical-align: middle;
    padding-left: 4%;
    padding-right: 4%;
  }
  .right .up {
    padding-bottom: 5px;
    border-bottom: 1px solid #e5e5e5;
  }
  .right .down {
    padding-top: 5px;
  }
  .oproductshow {
    width: 100%;
    margin-top: 10px;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    text-align: center
  }
  .oproductshow img {
    width: 100%;
    height: 130px;
    margin: 5px 0;
  }

  /* 底部login链接 */
  .loginfooter {
    margin-top: 10px;
    font-size: 15px;
    padding: 5px;
    border-bottom: 1px solid #e5e5e5;
  }
  .loginfooter > a {
    text-decoration: none;
    color: #000;
    padding: 5px;
  }
  .goToTop {
    float: right;
    margin-top: -5px;
  }
</style>

<div class="search-box" id="top">
  <img src="/zhonglian/img/logo.png">
  <%= form_tag({controller: "site", action: "index_search_result"}, method: "get", class: "search-form") do %>
