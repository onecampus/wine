<% content_for :customer_title do %>
  用户中心
<% end %>
<link rel="stylesheet" href="/zhonglian/css/user_center.css" />
<style type="text/css">
  .right span a {
    margin-right: 5px;
    text-decoration: none;
    border-radius: 5px;
    padding: 4px 8px;
    border: 1px solid #aa0c4f;
    color: #aa0c4f;
    font-weight: bold;
    margin-top: 10px;
  }
  .right span:nth-child(2) {
    text-align: right;
  }
</style>
    <div class="main">
      <div class="top">
        <p><%= current_user.username %></p>
        <div class="tab">
          <div class="tab-item">
            <p>
              <a href="/customer/users/wait/ship"><img src="/zhonglian/img/user_center/icon_wait_to_ship.png" />
              </a>
            </p>

            <p>待发货</p>
          </div>
          <div class="tab-item">
            <p>
              <a href="/customer/users/wait/pay"><img src="/zhonglian/img/user_center/icon_wait_to_pay.png" />
              </a>
            </p>

            <p>待付款</p>
          </div>
          <div class="tab-item">
            <p>
              <a href="/customer/users/wait/receive"><img src="/zhonglian/img/user_center/icon_wait_to_receive.png" />
              </a>
            </p>

            <p>待收货</p>
          </div>
          <div class="tab-item active">
            <p><img src="/zhonglian/img/user_center/icon_history_order.png" />
            </p>

            <p>历史订单</p>
          </div>
        </div>
      </div>
      <% @orders.each do |o| %>
      <div class="history_order">
        <p>订单编号：<span><%= o.order_number %></span></p>
        <% o.product_orders.each do |po| %>
        <div class="ordered_product">
          <img src="/zhonglian/img/user_center/icon_wait_to_receive.png" class="left" />
          <p class="right">
            <span class="order_price"><%= po.product.price %></span>
            <span class="order_num">×<%= po.product_count %></span>
            <span><a href="/customer/products/<%= po.product.id %>/comments/new">评论</a></span>
          </p>
          <p class="middle">
            <span><%= po.product.name %></span>
            <span><%= po.product.name %></span>
          </p>
        </div>
        <% end %>
        <div>
          <span class="freight">运费：￥<%= o.freight %>元</span>
          <span class="sum"><%= o.total_price %></span>
        </div>
      </div>
      <% end %>

    </div>
    <script type="text/javascript" src="/zhonglian/js/user_center.js"></script>
    <%= render "site/shared/bottombar" %>
