<% content_for :customer_title do %>
    搜索结果
<% end %>
<script type="text/javascript">
  (function(){
    $(document).on('ready page:load',function(){
       $(".q").focus(function(){
          $(".search-box-word").hide();
      });
      $(".q").blur(function(){
          $(".search-box-word").show();
      });
    });
  }).call(this);
</script>
<style type="text/css">
    .search-box {
        width: 100%;
        height: 200px;
        margin-top: -20px;
        background-image: url("/zhonglian/img/search/search_bg.jpg");
        background-repeat: no-repeat;
        background-size: 100% 100%;
        background-position: center;
        background-clip: content-box;
        background-origin: content-box;
        text-align: center;
    }

    .search-box-item {
        width:100%;
        height: 50px;
        position: relative;
        top: 70px;
    }

    .search-form .q {
        height: 24px;
        width: 70%;
        font-size: 20px;
        border: 0 none;
        padding: 12px 15px;
        border-radius: 5px;
        opacity: 0.5;
        padding-left: 50px;
    }

    .search-form img {
        width:30px;
        height:27px;
        position: absolute;
        left: 12%;
        top: 11px;
    }
    .search-form p {
        position: absolute;
        left: 23%;
        top: -18px;
        font-size: 25px;
        color: #ffffff;
    }

    .search-result {
        padding: 0 10px;
    }

    .search-result .title {
        font-size: 24px;
        color: #7d7d7d;
        margin: 1px 0 10px 2%;
    }

    .search-result-item {
        width: 50%;
        float: left;
        margin-bottom: 50%;
        text-align: center;
    }

    .search-result-item img {
     width: 90%;
     height: 200px;
    }

    .search-result-item p img {
        width: 120px;
        height: 120px;
    }


    .product-inf {
        width: 90%;
        height: 50px;
        background-color: #ffffff;
        color: #787878;
        margin-left: 5%;
        float: left;
        text-align: left;
    }

    .text1 {
        margin: 0 0 0 4%;
        width: 90%;
        padding: 0;
        white-space: nowrap;
        overflow: hidden;
    }

    .text2 {
        margin: 0 0 0 5%;
        width: 90%;
        padding: 0;
        white-space: nowrap;
        overflow: hidden;
        font-weight: bold;
    }

    hr {
        margin-top: -1px;
    }
</style>
<div class="search-box">
  <%= form_tag({controller: "site", action: "index_search_result"}, method: "get", class: "search-form") do %>
    <div  class="search-box-item">
      <input class="q" type="text" name="q" >
       <img src="/zhonglian/img/search/search-white.png">
       <p class="search-box-word">搜索</p>
    </div>
  <% end %>
</div>
<hr/>

<div class="search-result">
  <p class="title">搜索结果</p>

  <% @products.each do |p| %>
  <a href="/customer/products/<%=p.id%>/show">
    <div class="search-result-item">
      <img src="<%=p.img%>"/>
       <div class="product-inf">
         <p class="text1"><%= p.name %></p>
         <p class="text2">¥ <%= p.price %></p>
        </div>
    </div>
  </a>
  <% end %>
</div>
<%= render "site/shared/bottombar" %>
