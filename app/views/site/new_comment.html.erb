<% content_for :customer_title do %>
  评论
<% end %>
<style type="text/css">
  .form-box, .input-group {
    background-color: transparent;
  }
  .btn-red {
    margin-top: 15px;
    background-color: #428bca;
    border-color: #428bca;
  }
</style>
<div class="form-box">
  <%= form_tag({controller: "site", action: "create_comment"}, method: "post", class: "input-group") do %>
    <%= text_area_tag(:content, nil, autofocus: true, class: "comment-area", required: "true", placeholder: "请输入评论...") %>
    <%= submit_tag '提交', class: 'btn btn-red btn-block' %>
  <% end %>
</div>
<%= render "site/shared/bottombar" %>
