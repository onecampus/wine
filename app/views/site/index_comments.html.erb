<% content_for :customer_title do %>
  商品评论
<% end %>
<style type="text/css">
  body {
    width: 100%;
  }
  .comments {
    background-color: #fff;
    margin: 30px auto 0 auto;
    border: 1px solid #ddd;
    width: 96%;
    border-radius: 5px;
  }

  .comments div {
    border-bottom: 1px solid #ddd;
    clear: both;
    display: block;
    margin: 15px;
  }

  .comment p {
    margin: 5px 5px 5px 15px;
    line-height: 18px;
    font-size: 18px;
  }

  .comment p:first-child {
    font-weight: bold;
    margin-top: 15px;
  }

  .comment p:nth-child(2) {
    color: #666;
  }

  .comment p:nth-child(3) {
    color: #dfdfdf;
    font-size: 14px;
    margin-bottom: 15px;
  }

  .add-comment {
    width: 80%;
    margin: 20px auto 80px auto;
    display: block;
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    line-height: 18px;
    padding: 15px 0;
    background-color: #428bca;
    border-color: #428bca;
  }
</style>
<div class="comments">
  <% @comments.each do |c| %>
    <div class="comment">
      <p><%= c.user.username %></p>
      <p><%= c.body %></p>
      <p><%= c.created_at.strftime("%Y-%m-%d") %></p>
    </div>
  <% end %>
</div>
<a href="/customer/products/<%= @product.id %>/comments/new" class="add-comment btn btn-red">添加评论</a>
<%= render "site/shared/bottombar" %>
<script type="text/javascript">
  $(document).ready(function(){
    var $comment = $( ".comments:has('div')" );
    if ( !$comment.length ) {
      $( ".comments" ).append( "<div>暂无评论！</div>");
      var $comments = $( ".comments").find( "div" );
      $comments.css( "border", "none" );
    }
  });
</script>
